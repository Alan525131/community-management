<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.lufengxue.user.mapper.UserMapper">


    <!--添加用户数据-->
        <insert id="insert" parameterType="org.lufengxue.pojo.user.dto.UserDto" >

        insert into ele_user
                    (username,password,sex,phone,created_date,updated_date)
                    value (#{username},#{password},#{sex}, #{phone},#{createdDate},#{updatedDate})
    </insert>
    <!--更新数据  -->
    <update id="updateUser" parameterType="org.lufengxue.pojo.user.po.UserPo">
        update
                ele_user
        set
                username =#{username},password=#{password},sex =#{sex}, phone =#{phone},
                created_date =#{createdDate},updated_date =#{updatedDate}
        where
                nick_name=#{nickName}
    </update>
    <!--根据用户id删除数据-->

    <delete id="deleteId" parameterType="String">
        delete from ele_user where username=#{username}
    </delete>

    <!--  根据用户名查询查询 -->
    <select id="findByName" resultType="org.lufengxue.pojo.user.dto.UserDto">
        select * from ele_user where username=#{username}
    </select>
    <!--查询所有数据-->
    <select id="findAll" resultType="org.lufengxue.pojo.user.dto.UserDto">
        select * from ele_user
    </select>

</mapper>